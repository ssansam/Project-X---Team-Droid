<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:padding="15dip" android:orientation="horizontal" android:background="@drawable/wall_570">
	<LinearLayout android:orientation="vertical"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_gravity="center" android:paddingLeft="20dip"
		android:paddingRight="20dip">
		<TextView android:text="@string/main_title"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_gravity="center" android:layout_marginBottom="20dip"
			android:textSize="24.5sp" android:textColor="@color/red_color"/>
		<TableLayout android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_gravity="center"
			android:stretchColumns="*">
			<TableRow>
				
				<Button android:id="@+id/new_button" android:text="@string/new_game_label" />
			</TableRow>
			<TableRow>
				<Button android:id="@+id/about_button" android:text="@string/about_label" />
				
			</TableRow><Button android:id="@+id/exit_button" android:text="@string/exit_label" />
		</TableLayout>
	</LinearLayout>
</LinearLayout>